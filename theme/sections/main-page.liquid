<div class="page-wrapper">
  <div class="page-container">
    <h1 class="page-title">{{ page.title }}</h1>
    <div class="page-content">
      {{ page.content }}
    </div>
  </div>
</div>

<style>
.page-wrapper {
  padding: 3rem 1rem;
}

.page-container {
  max-width: 800px;
  margin: 0 auto;
}

.page-title {
  margin: 0 0 2rem 0;
  font-size: 2.5rem;
  font-weight: 700;
  color: rgb(15, 23, 42);
}

.page-content {
  font-size: 1rem;
  line-height: 1.75;
  color: rgb(51, 65, 85);
}

.page-content h2 {
  margin: 2rem 0 1rem 0;
  font-size: 1.875rem;
  font-weight: 700;
}

.page-content h3 {
  margin: 1.5rem 0 0.75rem 0;
  font-size: 1.5rem;
  font-weight: 600;
}

.page-content p {
  margin: 0 0 1rem 0;
}

.page-content ul,
.page-content ol {
  margin: 0 0 1rem 0;
  padding-left: 1.5rem;
}

.page-content li {
  margin-bottom: 0.5rem;
}

@media (max-width: 768px) {
  .page-title {
    font-size: 2rem;
  }
}
</style>

{% schema %}
{
  "name": "Page",
  "settings": []
}
{% endschema %}
