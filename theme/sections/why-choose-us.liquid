{% comment %}
  Why Choose Us Section
  Brand story with features grid
{% endcomment %}

<section class="why-choose" id="why-choose-{{ section.id }}">
  <div class="why-choose__container">
    <div class="why-choose__grid">
      <div class="why-choose__content">
        {% if section.settings.heading != blank %}
          <h3 class="why-choose__heading">{{ section.settings.heading }}</h3>
        {% endif %}
        
        {% if section.settings.description != blank %}
          <p class="why-choose__description">{{ section.settings.description }}</p>
        {% endif %}
        
        <div class="why-choose__features">
          {% for block in section.blocks %}
            {% if block.type == 'feature' %}
              <div class="why-choose__feature" {{ block.shopify_attributes }}>
                {% if block.settings.icon == 'shield' %}
                  <svg class="why-choose__feature-icon" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"/>
                  </svg>
                {% elsif block.settings.icon == 'truck' %}
                  <svg class="why-choose__feature-icon" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <rect x="1" y="3" width="15" height="13"/>
                    <polygon points="16 8 20 8 23 11 23 16 16 16 16 8"/>
                    <circle cx="5.5" cy="18.5" r="2.5"/>
                    <circle cx="18.5" cy="18.5" r="2.5"/>
                  </svg>
                {% elsif block.settings.icon == 'star' %}
                  <svg class="why-choose__feature-icon" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"/>
                  </svg>
                {% endif %}
                
                <div class="why-choose__feature-text">
                  {% if block.settings.title != blank %}
                    <div class="why-choose__feature-title">{{ block.settings.title }}</div>
                  {% endif %}
                  {% if block.settings.description != blank %}
                    <p class="why-choose__feature-description">{{ block.settings.description }}</p>
                  {% endif %}
                </div>
              </div>
            {% endif %}
          {% endfor %}
        </div>
      </div>
      
      <div class="why-choose__cards">
        {% for block in section.blocks %}
          {% if block.type == 'card' %}
            <div class="why-choose__card" data-color="{{ block.settings.color }}" {{ block.shopify_attributes }}>
              {% if block.settings.icon == 'shield' %}
                <svg class="why-choose__card-icon" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"/>
                </svg>
              {% elsif block.settings.icon == 'truck' %}
                <svg class="why-choose__card-icon" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <rect x="1" y="3" width="15" height="13"/>
                  <polygon points="16 8 20 8 23 11 23 16 16 16 16 8"/>
                  <circle cx="5.5" cy="18.5" r="2.5"/>
                  <circle cx="18.5" cy="18.5" r="2.5"/>
                </svg>
              {% elsif block.settings.icon == 'package' %}
                <svg class="why-choose__card-icon" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <line x1="16.5" y1="9.4" x2="7.5" y2="4.21"/>
                  <path d="M21 16V8a2 2 0 0 0-1-1.73l-7-4a2 2 0 0 0-2 0l-7 4A2 2 0 0 0 3 8v8a2 2 0 0 0 1 1.73l7 4a2 2 0 0 0 2 0l7-4A2 2 0 0 0 21 16z"/>
                  <polyline points="3.27 6.96 12 12.01 20.73 6.96"/>
                  <line x1="12" y1="22.08" x2="12" y2="12"/>
                </svg>
              {% elsif block.settings.icon == 'star' %}
                <svg class="why-choose__card-icon" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"/>
                </svg>
              {% endif %}
              
              {% if block.settings.label != blank %}
                <div class="why-choose__card-label">{{ block.settings.label }}</div>
              {% endif %}
              {% if block.settings.title != blank %}
                <div class="why-choose__card-title">{{ block.settings.title }}</div>
              {% endif %}
            </div>
          {% endif %}
        {% endfor %}
      </div>
    </div>
  </div>
</section>

<style>
#why-choose-{{ section.id }} {
  padding: 4rem 1.5rem;
  background: {{ section.settings.background_color | default: 'rgba(248, 250, 252, 0.5)' }};
}

#why-choose-{{ section.id }} .why-choose__container {
  max-width: 1280px;
  margin: 0 auto;
}

#why-choose-{{ section.id }} .why-choose__grid {
  display: grid;
  grid-template-columns: 1fr;
  gap: 3rem;
  align-items: center;
}

@media (min-width: 768px) {
  #why-choose-{{ section.id }} .why-choose__grid {
    grid-template-columns: repeat(2, 1fr);
  }
}

#why-choose-{{ section.id }} .why-choose__heading {
  margin: 0 0 1rem 0;
  font-size: 1.875rem;
  font-weight: 600;
  color: #0f172a;
  line-height: 1.3;
}

#why-choose-{{ section.id }} .why-choose__description {
  margin: 0 0 1.5rem 0;
  font-size: 1.125rem;
  color: #64748b;
  line-height: 1.75;
}

#why-choose-{{ section.id }} .why-choose__features {
  display: flex;
  flex-direction: column;
  gap: 1rem;
}

#why-choose-{{ section.id }} .why-choose__feature {
  display: flex;
  align-items: flex-start;
  gap: 0.75rem;
}

#why-choose-{{ section.id }} .why-choose__feature-icon {
  color: #2563eb;
  flex-shrink: 0;
  margin-top: 0.125rem;
}

#why-choose-{{ section.id }} .why-choose__feature-text {
  flex: 1;
}

#why-choose-{{ section.id }} .why-choose__feature-title {
  margin: 0 0 0.25rem 0;
  font-size: 1rem;
  font-weight: 500;
  color: #0f172a;
  line-height: 1.5;
}

#why-choose-{{ section.id }} .why-choose__feature-description {
  margin: 0;
  font-size: 0.875rem;
  color: #64748b;
  line-height: 1.5;
}

#why-choose-{{ section.id }} .why-choose__cards {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 1rem;
}

#why-choose-{{ section.id }} .why-choose__card {
  border: 2px solid;
  border-radius: 0.75rem;
  padding: 1.5rem;
  box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1);
  transition: all 0.3s;
  cursor: pointer;
}

#why-choose-{{ section.id }} .why-choose__card[data-color="green"] {
  border-color: #2AC864;
}

#why-choose-{{ section.id }} .why-choose__card[data-color="teal"] {
  border-color: #2699A6;
}

#why-choose-{{ section.id }} .why-choose__card[data-color="mint"] {
  border-color: #2BD9A8;
}

#why-choose-{{ section.id }} .why-choose__card:hover {
  transform: translateY(-4px);
  box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.15);
}

#why-choose-{{ section.id }} .why-choose__card[data-color="green"]:hover {
  background: #2AC864;
  color: white;
}

#why-choose-{{ section.id }} .why-choose__card[data-color="teal"]:hover {
  background: #2699A6;
  color: white;
}

#why-choose-{{ section.id }} .why-choose__card[data-color="mint"]:hover {
  background: #2BD9A8;
  color: white;
}

#why-choose-{{ section.id }} .why-choose__card-icon {
  margin-bottom: 0.75rem;
  transition: color 0.3s;
}

#why-choose-{{ section.id }} .why-choose__card[data-color="green"] .why-choose__card-icon {
  color: #2AC864;
}

#why-choose-{{ section.id }} .why-choose__card[data-color="teal"] .why-choose__card-icon {
  color: #2699A6;
}

#why-choose-{{ section.id }} .why-choose__card[data-color="mint"] .why-choose__card-icon {
  color: #2BD9A8;
}

#why-choose-{{ section.id }} .why-choose__card:hover .why-choose__card-icon {
  color: white;
}

#why-choose-{{ section.id }} .why-choose__card-label {
  font-size: 0.875rem;
  color: #64748b;
  margin-bottom: 0.25rem;
  transition: color 0.3s;
}

#why-choose-{{ section.id }} .why-choose__card:hover .why-choose__card-label {
  color: rgba(255, 255, 255, 0.9);
}

#why-choose-{{ section.id }} .why-choose__card-title {
  font-size: 1.125rem;
  font-weight: 500;
  color: #0f172a;
  transition: color 0.3s;
}

#why-choose-{{ section.id }} .why-choose__card:hover .why-choose__card-title {
  color: white;
}

@media (max-width: 767px) {
  #why-choose-{{ section.id }} {
    padding: 3rem 1rem;
  }
  
  #why-choose-{{ section.id }} .why-choose__heading {
    font-size: 1.5rem;
  }
  
  #why-choose-{{ section.id }} .why-choose__description {
    font-size: 1rem;
  }
}
</style>

