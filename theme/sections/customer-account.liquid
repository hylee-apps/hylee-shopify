{% comment %}
  Customer Account Dashboard
  Amazon-style "Your Account" landing page with navigation cards
{% endcomment %}

{{ 'section-customer-dashboard.css' | asset_url | stylesheet_tag }}
{{ 'component-icon.css' | asset_url | stylesheet_tag }}
{{ 'component-account-nav-card.css' | asset_url | stylesheet_tag }}

<div class='customer-dashboard'>
  <div class='customer-dashboard__container'>
    {%- comment -%} Header {%- endcomment -%}
    <header class='customer-dashboard__header'>
      <h1 class='customer-dashboard__title'>Your Account</h1>
      <p class='customer-dashboard__greeting'>
        Hello, <strong>{{ customer.first_name }}</strong>
        <span class='customer-dashboard__member-since'>
          Â· Member since {{ customer.created_at | date: '%B %Y' }}
        </span>
      </p>
    </header>

    {%- comment -%} Navigation Cards Grid {%- endcomment -%}
    <nav class='customer-dashboard__grid' aria-label='Account navigation'>
      {%- comment -%} Orders Card {%- endcomment -%}
      {%- render 'account-nav-card',
        icon: 'package',
        title: 'Your Orders',
        description: 'Track, return, or buy things again',
        url: '/pages/orders'
      -%}

      {%- comment -%} Login & Security Card {%- endcomment -%}
      {%- render 'account-nav-card',
        icon: 'shield',
        title: 'Login & Security',
        description: 'Edit login, name, and mobile number',
        url: '/pages/login-security'
      -%}

      {%- comment -%} Addresses Card {%- endcomment -%}
      {%- render 'account-nav-card',
        icon: 'map-pin',
        title: 'Your Addresses',
        description: 'Edit addresses for orders and gifts',
        url: routes.account_addresses_url
      -%}

      {%- comment -%} Contact Us Card {%- endcomment -%}
      {%- render 'account-nav-card',
        icon: 'help-circle',
        title: 'Contact Us',
        description: 'Get help with your orders and account',
        url: '/pages/contact-us'
      -%}

      {%- comment -%} Gift Cards Card (Coming Soon) {%- endcomment -%}
      {%- render 'account-nav-card',
        icon: 'gift',
        title: 'Gift Cards',
        description: 'View balance or redeem a card',
        disabled: true,
        badge_text: 'Coming Soon'
      -%}

      {%- comment -%} Lists Card (Coming Soon) {%- endcomment -%}
      {%- render 'account-nav-card',
        icon: 'heart',
        title: 'Your Lists',
        description: 'View and manage your wish lists',
        disabled: true,
        badge_text: 'Coming Soon'
      -%}

      {%- comment -%} Messages Card (Coming Soon) {%- endcomment -%}
      {%- render 'account-nav-card',
        icon: 'mail',
        title: 'Messages',
        description: 'View your messages from us',
        disabled: true,
        badge_text: 'Coming Soon'
      -%}
    </nav>
  </div>
</div>

{% schema %}
{
  "name": "Account Dashboard",
  "settings": []
}
{% endschema %}
