{% comment %}
  Collection Product Grid Section
  Main product listing with filters and grid
{% endcomment %}

{% paginate collection.products by section.settings.products_per_page %}

<div class="collection-grid" id="collection-{{ section.id }}">
  <div class="collection-grid__container">
    <div class="collection-grid__layout">
      
      {%- comment -%} Filters Sidebar {%- endcomment -%}
      {% if section.settings.enable_filtering %}
        <aside class="collection-grid__sidebar" id="collection-filters-{{ section.id }}">
          <div class="collection-grid__filters-sticky">
            
            {%- comment -%} Filter Header {%- endcomment -%}
            <div class="collection-grid__filters-header">
              <div class="collection-grid__filters-title">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <line x1="4" y1="21" x2="4" y2="14"></line>
                  <line x1="4" y1="10" x2="4" y2="3"></line>
                  <line x1="12" y1="21" x2="12" y2="12"></line>
                  <line x1="12" y1="8" x2="12" y2="3"></line>
                  <line x1="20" y1="21" x2="20" y2="16"></line>
                  <line x1="20" y1="12" x2="20" y2="3"></line>
                  <line x1="1" y1="14" x2="7" y2="14"></line>
                  <line x1="9" y1="8" x2="15" y2="8"></line>
                  <line x1="17" y1="16" x2="23" y2="16"></line>
                </svg>
                <h3>Filters</h3>
              </div>
            </div>

            {%- comment -%} Category Filter {%- endcomment -%}
            {% if section.settings.show_category_filter %}
              <div class="collection-grid__filter-group">
                <h4 class="collection-grid__filter-heading">Category</h4>
                <div class="collection-grid__filter-options">
                  {% assign excluded_handles = 'frontpage,deals-promotions,seasonal,new-arrivals,special-events' | split: ',' %}
                  {% for collection_item in collections %}
                    {% unless excluded_handles contains collection_item.handle %}
                      <label class="collection-grid__filter-option">
                        <input 
                          type="radio" 
                          name="collection" 
                          value="{{ collection_item.url }}"
                          {% if collection.handle == collection_item.handle %}checked{% endif %}
                          onchange="window.location.href=this.value"
                          class="collection-grid__radio"
                        >
                        <span class="collection-grid__filter-label">{{ collection_item.title }}</span>
                        <span class="collection-grid__filter-count">({{ collection_item.products_count }})</span>
                      </label>
                    {% endunless %}
                  {% endfor %}
                </div>
              </div>
            {% endif %}

            {%- comment -%} Price Range {%- endcomment -%}
            {% if section.settings.show_price_filter %}
              <div class="collection-grid__filter-group">
                <h4 class="collection-grid__filter-heading">Price Range</h4>
                <div class="collection-grid__price-range">
                  <input type="range" min="0" max="5000" step="50" value="5000" class="collection-grid__price-slider">
                  <div class="collection-grid__price-values">
                    <span>$0</span>
                    <span id="price-max-{{ section.id }}">$5000</span>
                  </div>
                </div>
              </div>
            {% endif %}

            {%- comment -%} Brand/Vendor Filter {%- endcomment -%}
            {% if section.settings.show_vendor_filter %}
              {% assign vendors = collection.products | map: 'vendor' | uniq %}
              {% if vendors.size > 0 %}
                <div class="collection-grid__filter-group">
                  <h4 class="collection-grid__filter-heading">Brand</h4>
                  <div class="collection-grid__filter-options">
                    {% for vendor in vendors limit: 5 %}
                      <label class="collection-grid__filter-option">
                        <input type="checkbox" value="{{ vendor }}" class="collection-grid__checkbox">
                        <span class="collection-grid__filter-label">{{ vendor }}</span>
                      </label>
                    {% endfor %}
                  </div>
                </div>
              {% endif %}
            {% endif %}

            {%- comment -%} Availability {%- endcomment -%}
            <div class="collection-grid__filter-group">
              <h4 class="collection-grid__filter-heading">Availability</h4>
              <div class="collection-grid__filter-options">
                <label class="collection-grid__filter-option">
                  <input type="checkbox" class="collection-grid__checkbox">
                  <span class="collection-grid__filter-label">In Stock Only</span>
                </label>
                <label class="collection-grid__filter-option">
                  <input type="checkbox" class="collection-grid__checkbox">
                  <span class="collection-grid__filter-label">Free Shipping</span>
                </label>
              </div>
            </div>

          </div>
        </aside>
      {% endif %}

      {%- comment -%} Main Content {%- endcomment -%}
      <div class="collection-grid__main">
        
        {%- comment -%} Toolbar {%- endcomment -%}
        <div class="collection-grid__toolbar">
          <div class="collection-grid__toolbar-left">
            {% if section.settings.enable_filtering %}
              <button class="collection-grid__filters-toggle" id="filters-toggle-{{ section.id }}" aria-label="Toggle filters">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <line x1="4" y1="21" x2="4" y2="14"></line>
                  <line x1="4" y1="10" x2="4" y2="3"></line>
                  <line x1="12" y1="21" x2="12" y2="12"></line>
                  <line x1="12" y1="8" x2="12" y2="3"></line>
                  <line x1="20" y1="21" x2="20" y2="16"></line>
                  <line x1="20" y1="12" x2="20" y2="3"></line>
                  <line x1="1" y1="14" x2="7" y2="14"></line>
                  <line x1="9" y1="8" x2="15" y2="8"></line>
                  <line x1="17" y1="16" x2="23" y2="16"></line>
                </svg>
                <span class="collection-grid__filters-toggle-text">Hide Filters</span>
              </button>
            {% endif %}
            <span class="collection-grid__result-count">
              {{ collection.products_count }} {% if collection.products_count == 1 %}product{% else %}products{% endif %}
            </span>
          </div>

          <div class="collection-grid__toolbar-right">
            {%- comment -%} View Toggle {%- endcomment -%}
            <div class="collection-grid__view-toggle">
              <button class="collection-grid__view-btn collection-grid__view-btn--active" data-view="grid">
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <rect x="3" y="3" width="7" height="7"></rect>
                  <rect x="14" y="3" width="7" height="7"></rect>
                  <rect x="14" y="14" width="7" height="7"></rect>
                  <rect x="3" y="14" width="7" height="7"></rect>
                </svg>
              </button>
              <button class="collection-grid__view-btn" data-view="list">
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <line x1="8" y1="6" x2="21" y2="6"></line>
                  <line x1="8" y1="12" x2="21" y2="12"></line>
                  <line x1="8" y1="18" x2="21" y2="18"></line>
                  <line x1="3" y1="6" x2="3.01" y2="6"></line>
                  <line x1="3" y1="12" x2="3.01" y2="12"></line>
                  <line x1="3" y1="18" x2="3.01" y2="18"></line>
                </svg>
              </button>
            </div>

            {%- comment -%} Sort Dropdown {%- endcomment -%}
            <div class="collection-grid__sort">
              <select class="collection-grid__sort-select" onchange="window.location.href=this.value">
                <option value="?sort_by=manual">Relevance</option>
                <option value="?sort_by=best-selling">Most Popular</option>
                <option value="?sort_by=price-ascending">Price: Low to High</option>
                <option value="?sort_by=price-descending">Price: High to Low</option>
                <option value="?sort_by=created-descending">Newest</option>
                <option value="?sort_by=title-ascending">A-Z</option>
              </select>
              <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="collection-grid__sort-icon">
                <polyline points="6 9 12 15 18 9"></polyline>
              </svg>
            </div>
          </div>
        </div>

        {%- comment -%} Product Grid {%- endcomment -%}
        <div class="collection-grid__products" data-collection-products>
          {% for product in collection.products %}
            <div class="collection-grid__product-card">
              
              {%- comment -%} Product Image {%- endcomment -%}
              <a href="{{ product.url }}" class="collection-grid__product-image-wrapper">
                {% if product.featured_image %}
                  <img 
                    src="{{ product.featured_image | image_url: width: 600 }}"
                    alt="{{ product.featured_image.alt | escape }}"
                    class="collection-grid__product-image"
                    loading="lazy"
                    width="600"
                    height="600"
                  >
                {% else %}
                  <div class="collection-grid__product-placeholder">
                    {{ 'product-1' | placeholder_svg_tag: 'collection-grid__placeholder-svg' }}
                  </div>
                {% endif %}

                {%- comment -%} Badges {%- endcomment -%}
                <div class="collection-grid__badges">
                  {% if product.compare_at_price > product.price %}
                    {% assign discount = product.compare_at_price | minus: product.price | times: 100 | divided_by: product.compare_at_price %}
                    <span class="collection-grid__badge collection-grid__badge--sale">{{ discount }}% OFF</span>
                  {% endif %}
                  {% if product.tags contains 'bestseller' or product.tags contains 'best-seller' %}
                    <span class="collection-grid__badge collection-grid__badge--bestseller">Bestseller</span>
                  {% endif %}
                  {% if product.tags contains 'free-shipping' %}
                    <span class="collection-grid__badge collection-grid__badge--shipping">Free Shipping</span>
                  {% endif %}
                </div>
              </a>

              {%- comment -%} Product Info {%- endcomment -%}
              <div class="collection-grid__product-info">
                <a href="{{ product.url }}" class="collection-grid__product-title">
                  {{ product.title }}
                </a>

                {%- comment -%} Rating - Check for product reviews metafield or app data {%- endcomment -%}
                {% if product.metafields.reviews.rating %}
                  <div class="collection-grid__rating">
                    <div class="collection-grid__stars">
                      {% assign rating = product.metafields.reviews.rating | round %}
                      {% for i in (1..5) %}
                        {% if i <= rating %}
                          <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor" stroke="currentColor" stroke-width="2">
                            <polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"/>
                          </svg>
                        {% else %}
                          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"/>
                          </svg>
                        {% endif %}
                      {% endfor %}
                    </div>
                    <span class="collection-grid__rating-text">{{ product.metafields.reviews.rating }} ({{ product.metafields.reviews.rating_count }})</span>
                  </div>
                {% endif %}

                {%- comment -%} Price {%- endcomment -%}
                <div class="collection-grid__price-wrapper">
                  {% if product.compare_at_price > product.price %}
                    <span class="collection-grid__price-sale">{{ product.price | money }}</span>
                    <span class="collection-grid__price-compare">{{ product.compare_at_price | money }}</span>
                  {% else %}
                    <span class="collection-grid__price">{{ product.price | money }}</span>
                  {% endif %}
                </div>

                {%- comment -%} Bulk Pricing - Use metafield if available {%- endcomment -%}
                {% if product.metafields.bulk.price or product.metafields.custom.bulk_price %}
                  <div class="collection-grid__bulk-price">
                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                      <line x1="16.5" y1="9.4" x2="7.5" y2="4.21"></line>
                      <path d="M21 16V8a2 2 0 0 0-1-1.73l-7-4a2 2 0 0 0-2 0l-7 4A2 2 0 0 0 3 8v8a2 2 0 0 0 1 1.73l7 4a2 2 0 0 0 2 0l7-4A2 2 0 0 0 21 16z"></path>
                      <polyline points="3.27 6.96 12 12.01 20.73 6.96"></polyline>
                      <line x1="12" y1="22.08" x2="12" y2="12"></line>
                    </svg>
                    <span>Bulk: {{ product.metafields.bulk.price | default: product.metafields.custom.bulk_price | money }}/unit</span>
                  </div>
                {% endif %}

                {%- comment -%} Footer {%- endcomment -%}
                <div class="collection-grid__product-footer">
                  {% if product.metafields.bulk.minimum_order or product.metafields.custom.min_order %}
                    <span class="collection-grid__min-order">Min: {{ product.metafields.bulk.minimum_order | default: product.metafields.custom.min_order }} units</span>
                  {% endif %}
                  {% if product.vendor != blank %}
                    <span class="collection-grid__supplier">{{ product.vendor }}</span>
                  {% endif %}
                </div>
              </div>
            </div>
          {% else %}
            <div class="collection-grid__empty">
              <p>No products found.</p>
            </div>
          {% endfor %}
        </div>

        {%- comment -%} Pagination {%- endcomment -%}
        {% if paginate.pages > 1 %}
          <div class="collection-grid__pagination">
            {% if paginate.previous %}
              <a href="{{ paginate.previous.url }}" class="collection-grid__pagination-btn">Previous</a>
            {% endif %}
            
            {% for part in paginate.parts %}
              {% if part.is_link %}
                <a href="{{ part.url }}" class="collection-grid__pagination-number">{{ part.title }}</a>
              {% else %}
                <span class="collection-grid__pagination-number collection-grid__pagination-number--current">{{ part.title }}</span>
              {% endif %}
            {% endfor %}

            {% if paginate.next %}
              <a href="{{ paginate.next.url }}" class="collection-grid__pagination-btn">Next</a>
            {% endif %}
          </div>
        {% endif %}

      </div>
    </div>
  </div>
</div>

