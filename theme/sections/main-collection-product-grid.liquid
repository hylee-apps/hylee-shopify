<script>
(function() {
  const sectionId = '{{ section.id }}';
  const filtersToggle = document.getElementById('filters-toggle-' + sectionId);
  const filtersSidebar = document.getElementById('collection-filters-' + sectionId);
  
  if (filtersToggle && filtersSidebar) {
    // Check localStorage for saved state
    const savedState = localStorage.getItem('collection-filters-visible');
    let filtersVisible = savedState !== 'false'; // Default to true
    
    // Set initial state
    if (!filtersVisible) {
      filtersSidebar.classList.add('collection-grid__sidebar--hidden');
      filtersToggle.querySelector('.collection-grid__filters-toggle-text').textContent = 'Show Filters';
    }
    
    filtersToggle.addEventListener('click', function() {
      filtersVisible = !filtersVisible;
      
      if (filtersVisible) {
        filtersSidebar.classList.remove('collection-grid__sidebar--hidden');
        filtersToggle.querySelector('.collection-grid__filters-toggle-text').textContent = 'Hide Filters';
      } else {
        filtersSidebar.classList.add('collection-grid__sidebar--hidden');
        filtersToggle.querySelector('.collection-grid__filters-toggle-text').textContent = 'Show Filters';
      }
      
      // Save state to localStorage
      localStorage.setItem('collection-filters-visible', filtersVisible);
    });
  }
  
  // Price slider real-time update
  const priceSlider = document.querySelector('.collection-grid__price-slider');
  const priceMaxDisplay = document.getElementById('price-max-' + sectionId);
  
  if (priceSlider && priceMaxDisplay) {
    priceSlider.addEventListener('input', function() {
      priceMaxDisplay.textContent = '$' + this.value;
    });
  }
})();
</script>

