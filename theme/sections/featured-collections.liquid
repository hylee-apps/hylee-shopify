{% comment %}
  Featured Collections Section
  Displays a grid of collection cards
{% endcomment %}

<section class="featured-collections" id="collections-{{ section.id }}">
  <div class="featured-collections__container">
    
    {% if section.settings.heading != blank %}
      <div class="featured-collections__header">
        <h2 class="featured-collections__title">{{ section.settings.heading }}</h2>
        {% if section.settings.description != blank %}
          <p class="featured-collections__description">{{ section.settings.description }}</p>
        {% endif %}
      </div>
    {% endif %}

    {% if section.blocks.size > 0 %}
      <div class="featured-collections__grid">
        {% for block in section.blocks %}
          {% if block.settings.collection != blank %}
            {% assign collection = collections[block.settings.collection] %}
          {% else %}
            {% assign collection = nil %}
          {% endif %}
          
          {% if collection %}
            <a href="{{ collection.url }}" class="collection-card" {{ block.shopify_attributes }}>
              <div class="collection-card__image">
                {% if block.settings.image %}
                  <img
                    src="{{ block.settings.image | image_url: width: 600 }}"
                    alt="{{ block.settings.image.alt | default: collection.title }}"
                    loading="lazy"
                    width="600"
                    height="600"
                  >
                {% elsif collection.image %}
                  <img
                    src="{{ collection.image | image_url: width: 600 }}"
                    alt="{{ collection.image.alt | default: collection.title }}"
                    loading="lazy"
                    width="600"
                    height="600"
                  >
                {% else %}
                  <div class="collection-card__placeholder">
                    <svg width="80" height="80" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1">
                      <rect x="3" y="3" width="18" height="18" rx="2" ry="2"></rect>
                      <circle cx="8.5" cy="8.5" r="1.5"></circle>
                      <polyline points="21 15 16 10 5 21"></polyline>
                    </svg>
                  </div>
                {% endif %}
                
                <div class="collection-card__overlay"></div>
              </div>

              <div class="collection-card__content">
                <h3 class="collection-card__title">
                  {% if block.settings.title != blank %}
                    {{ block.settings.title }}
                  {% else %}
                    {{ collection.title }}
                  {% endif %}
                </h3>
                
                {% if section.settings.show_product_count %}
                  <p class="collection-card__count">
                    {{ collection.products_count }} 
                    {% if collection.products_count == 1 %}product{% else %}products{% endif %}
                  </p>
                {% endif %}

                {% if block.settings.description != blank %}
                  <p class="collection-card__description">{{ block.settings.description }}</p>
                {% endif %}
              </div>
            </a>
          {% endif %}
        {% endfor %}
      </div>
    {% else %}
      <div class="featured-collections__empty">
        <p>Add collection blocks to display collections.</p>
      </div>
    {% endif %}

  </div>
</section>

<style>
#collections-{{ section.id }} {
  padding: {{ section.settings.padding_top }}px 1rem {{ section.settings.padding_bottom }}px;
  background-color: {{ section.settings.background_color }};
}

#collections-{{ section.id }} .featured-collections__container {
  max-width: 1440px;
  margin: 0 auto;
}

#collections-{{ section.id }} .featured-collections__header {
  text-align: center;
  margin-bottom: 3rem;
}

#collections-{{ section.id }} .featured-collections__title {
  margin: 0 0 1rem 0;
  font-size: 2.5rem;
  font-weight: 700;
  color: {{ section.settings.heading_color }};
}

@media (max-width: 768px) {
  #collections-{{ section.id }} .featured-collections__title {
    font-size: 2rem;
  }
}

#collections-{{ section.id }} .featured-collections__description {
  margin: 0;
  font-size: 1.125rem;
  color: rgb(100, 116, 139);
}

#collections-{{ section.id }} .featured-collections__grid {
  display: grid;
  grid-template-columns: repeat({{ section.settings.collections_per_row }}, 1fr);
  gap: 2rem;
}

@media (max-width: 1024px) {
  #collections-{{ section.id }} .featured-collections__grid {
    grid-template-columns: repeat(2, 1fr);
  }
}

@media (max-width: 640px) {
  #collections-{{ section.id }} .featured-collections__grid {
    grid-template-columns: 1fr;
  }
}

.collection-card {
  position: relative;
  display: block;
  overflow: hidden;
  border-radius: 0.75rem;
  text-decoration: none;
  color: inherit;
  transition: transform 0.3s;
}

.collection-card:hover {
  transform: translateY(-4px);
}

.collection-card__image {
  position: relative;
  width: 100%;
  padding-top: {{ section.settings.image_ratio }}%;
  overflow: hidden;
  background-color: rgb(248, 250, 252);
}

.collection-card__image img {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: transform 0.3s;
}

.collection-card:hover .collection-card__image img {
  transform: scale(1.05);
}

.collection-card__placeholder {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: rgb(203, 213, 225);
}

.collection-card__overlay {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 50%;
  background: linear-gradient(to top, rgba(0, 0, 0, 0.6), transparent);
  pointer-events: none;
}

.collection-card__content {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  padding: 2rem;
  color: white;
  z-index: 10;
}

.collection-card__title {
  margin: 0 0 0.5rem 0;
  font-size: 1.5rem;
  font-weight: 700;
}

.collection-card__count {
  margin: 0 0 0.5rem 0;
  font-size: 0.875rem;
  opacity: 0.9;
}

.collection-card__description {
  margin: 0;
  font-size: 0.9375rem;
  opacity: 0.95;
  line-height: 1.5;
}

#collections-{{ section.id }} .featured-collections__empty {
  text-align: center;
  padding: 4rem 2rem;
  color: rgb(100, 116, 139);
}
</style>

{% schema %}
{
  "name": "Featured Collections",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Shop by Category"
    },
    {
      "type": "color",
      "id": "heading_color",
      "label": "Heading Color",
      "default": "#0f172a"
    },
    {
      "type": "text",
      "id": "description",
      "label": "Description",
      "default": "Browse our curated collections"
    },
    {
      "type": "range",
      "id": "collections_per_row",
      "min": 2,
      "max": 4,
      "step": 1,
      "label": "Collections per Row",
      "default": 3
    },
    {
      "type": "range",
      "id": "image_ratio",
      "min": 50,
      "max": 150,
      "step": 10,
      "unit": "%",
      "label": "Image Aspect Ratio",
      "default": 100
    },
    {
      "type": "checkbox",
      "id": "show_product_count",
      "label": "Show Product Count",
      "default": true
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#f8fafc"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding Top",
      "default": 64
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding Bottom",
      "default": 64
    }
  ],
  "blocks": [
    {
      "type": "collection",
      "name": "Collection",
      "settings": [
        {
          "type": "collection",
          "id": "collection",
          "label": "Collection"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Custom Title",
          "info": "Leave blank to use collection title"
        },
        {
          "type": "text",
          "id": "description",
          "label": "Custom Description"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Custom Image",
          "info": "Leave blank to use collection image"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Featured Collections",
      "blocks": [
        { "type": "collection" },
        { "type": "collection" },
        { "type": "collection" }
      ]
    }
  ]
}
{% endschema %}
