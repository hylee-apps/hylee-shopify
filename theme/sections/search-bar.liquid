{% comment %}
  Search Bar Section
  Customizable in theme editor
{% endcomment %}

<section class="search-bar-section" id="search-{{ section.id }}">
  <div class="search-bar-section__container">
    {% if section.settings.heading != blank %}
      <h3 class="search-bar-section__heading">{{ section.settings.heading }}</h3>
    {% endif %}
    
    <form action="/search" method="get" class="search-bar-section__form" role="search">
      <div class="search-bar-section__input-wrapper">
        <svg class="search-bar-section__icon" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <circle cx="11" cy="11" r="8"/>
          <path d="m21 21-4.35-4.35"/>
        </svg>
        
        <input
          type="search"
          name="q"
          value="{{ search.terms | escape }}"
          placeholder="{{ section.settings.placeholder | default: 'Search thousands of products...' }}"
          class="search-bar-section__input"
          aria-label="Search"
        />
        
        <button type="submit" class="search-bar-section__button">
          {{ section.settings.button_text | default: 'Search' }}
        </button>
      </div>
    </form>
  </div>
</section>

<style>
#search-{{ section.id }} {
  padding: 3rem 1.5rem;
  background: {{ section.settings.background_color | default: '#ffffff' }};
  border-bottom: 1px solid rgba(226, 232, 240, 0.6);
}

#search-{{ section.id }} .search-bar-section__container {
  max-width: 56rem;
  margin: 0 auto;
}

#search-{{ section.id }} .search-bar-section__heading {
  text-align: center;
  margin: 0 0 1.5rem 0;
  color: {{ section.settings.heading_color | default: '#0f172a' }};
  font-size: 1.125rem;
  font-weight: 400;
  line-height: 1.5;
}

#search-{{ section.id }} .search-bar-section__form {
  width: 100%;
}

#search-{{ section.id }} .search-bar-section__input-wrapper {
  position: relative;
  display: flex;
  align-items: center;
  transition: all 0.2s;
}

#search-{{ section.id }} .search-bar-section__icon {
  position: absolute;
  left: 1.25rem;
  color: #94a3b8;
  pointer-events: none;
  transition: color 0.2s;
  z-index: 1;
}

#search-{{ section.id }} .search-bar-section__input-wrapper:focus-within .search-bar-section__icon {
  color: #2563eb;
}

#search-{{ section.id }} .search-bar-section__input {
  width: 100%;
  padding: 1rem 1.5rem 1rem 3.5rem;
  border: 1px solid #e2e8f0;
  border-radius: 0.75rem;
  background: #ffffff;
  font-size: 1rem;
  color: #0f172a;
  transition: all 0.2s;
  box-shadow: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
  outline: none;
}

#search-{{ section.id }} .search-bar-section__input:hover {
  border-color: #cbd5e1;
  box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
}

#search-{{ section.id }} .search-bar-section__input:focus {
  border-color: #3b82f6;
  box-shadow: 0 0 0 4px rgba(59, 130, 246, 0.1);
}

#search-{{ section.id }} .search-bar-section__input::placeholder {
  color: #94a3b8;
}

#search-{{ section.id }} .search-bar-section__button {
  position: absolute;
  right: 0.5rem;
  padding: 0.5rem 1.5rem;
  border: 2px solid {{ section.settings.button_border_color | default: '#2AC864' }};
  color: {{ section.settings.button_text_color | default: '#2AC864' }};
  background: transparent;
  border-radius: 0.5rem;
  font-size: 0.875rem;
  font-weight: 500;
  cursor: pointer;
  transition: all 0.2s;
}

#search-{{ section.id }} .search-bar-section__button:hover {
  background: {{ section.settings.button_border_color | default: '#2AC864' }};
  color: #ffffff;
}

@media (max-width: 768px) {
  #search-{{ section.id }} {
    padding: 2rem 1rem;
  }
  
  #search-{{ section.id }} .search-bar-section__input {
    padding-right: 5.5rem;
    font-size: 0.875rem;
  }
  
  #search-{{ section.id }} .search-bar-section__button {
    padding: 0.5rem 1rem;
    font-size: 0.8125rem;
  }
}
</style>

{% schema %}
{
  "name": "Search Bar",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Find the perfect products for your business"
    },
    {
      "type": "text",
      "id": "placeholder",
      "label": "Search Placeholder",
      "default": "Search thousands of products..."
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Search"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "heading_color",
      "label": "Heading Color",
      "default": "#0f172a"
    },
    {
      "type": "color",
      "id": "button_border_color",
      "label": "Button Border Color",
      "default": "#2AC864"
    },
    {
      "type": "color",
      "id": "button_text_color",
      "label": "Button Text Color",
      "default": "#2AC864"
    }
  ],
  "presets": [
    {
      "name": "Search Bar"
    }
  ]
}
{% endschema %}
