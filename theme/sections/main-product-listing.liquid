  "name": "Main Product Listing",
  "settings": [
    {
      "type": "range",
      "id": "products_per_page",
      "label": "Products per page",
      "min": 12,
      "max": 48,
      "step": 12,
      "default": 24
    },
    {
      "type": "checkbox",
      "id": "enable_filtering",
      "label": "Enable filtering",
