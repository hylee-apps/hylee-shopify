{% comment %}
  Main Product Listing Section
  Shows all products with filters and grid - used on /collections page
{% endcomment %}

{% assign all_products = collections.all.products %}

<div class="product-listing" id="listing-{{ section.id }}">
  <div class="product-listing__container">
    <div class="product-listing__layout">
      
      {%- comment -%} Filters Sidebar {%- endcomment -%}
      {% if section.settings.enable_filtering %}
        <aside class="product-listing__sidebar">
          <div class="product-listing__filters-sticky">
            
            {%- comment -%} Filter Header {%- endcomment -%}
            <div class="product-listing__filters-header">
              <div class="product-listing__filters-title">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <line x1="4" y1="21" x2="4" y2="14"></line>
                  <line x1="4" y1="10" x2="4" y2="3"></line>
                  <line x1="12" y1="21" x2="12" y2="12"></line>
                  <line x1="12" y1="8" x2="12" y2="3"></line>
                  <line x1="20" y1="21" x2="20" y2="16"></line>
                  <line x1="20" y1="12" x2="20" y2="3"></line>
                  <line x1="1" y1="14" x2="7" y2="14"></line>
                  <line x1="9" y1="8" x2="15" y2="8"></line>
                  <line x1="17" y1="16" x2="23" y2="16"></line>
                </svg>
                <h3>Filters</h3>
              </div>
            </div>

            {%- comment -%} Category Filter {%- endcomment -%}
            {% if section.settings.show_category_filter %}
              <div class="product-listing__filter-group">
                <h4 class="product-listing__filter-heading">Category</h4>
                <div class="product-listing__filter-options">
                  <label class="product-listing__filter-option">
                    <input type="radio" name="category" value="all" checked class="product-listing__radio">
                    <span class="product-listing__filter-label">All Categories</span>
                    <span class="product-listing__filter-count">(342)</span>
                  </label>
                  {% for collection in collections limit: 5 %}
                    <label class="product-listing__filter-option">
                      <input type="radio" name="category" value="{{ collection.handle }}" class="product-listing__radio">
                      <span class="product-listing__filter-label">{{ collection.title }}</span>
                      <span class="product-listing__filter-count">({{ collection.products_count }})</span>
                    </label>
                  {% endfor %}
                </div>
              </div>
            {% endif %}

            {%- comment -%} Price Range {%- endcomment -%}
            {% if section.settings.show_price_filter %}
              <div class="product-listing__filter-group">
                <h4 class="product-listing__filter-heading">Price Range</h4>
                <div class="product-listing__price-range">
                  <input type="range" min="0" max="500" step="10" value="500" class="product-listing__price-slider">
                  <div class="product-listing__price-values">
                    <span>$0</span>
                    <span id="price-max-{{ section.id }}">$500</span>
                  </div>
                </div>
              </div>
            {% endif %}

            {%- comment -%} Brand/Vendor Filter {%- endcomment -%}
            {% if section.settings.show_vendor_filter %}
              <div class="product-listing__filter-group">
                <h4 class="product-listing__filter-heading">Brand</h4>
                <div class="product-listing__filter-options">
                  <label class="product-listing__filter-option">
                    <input type="checkbox" class="product-listing__checkbox">
                    <span class="product-listing__filter-label">TechDirect</span>
                  </label>
                  <label class="product-listing__filter-option">
                    <input type="checkbox" class="product-listing__checkbox">
                    <span class="product-listing__filter-label">GadgetHub</span>
                  </label>
                  <label class="product-listing__filter-option">
                    <input type="checkbox" class="product-listing__checkbox">
                    <span class="product-listing__filter-label">AccessoryPro</span>
                  </label>
                  <label class="product-listing__filter-option">
                    <input type="checkbox" class="product-listing__checkbox">
                    <span class="product-listing__filter-label">AudioMax</span>
                  </label>
                  <label class="product-listing__filter-option">
                    <input type="checkbox" class="product-listing__checkbox">
                    <span class="product-listing__filter-label">MediaPro</span>
                  </label>
                </div>
              </div>
            {% endif %}

            {%- comment -%} Rating Filter {%- endcomment -%}
            <div class="product-listing__filter-group">
              <h4 class="product-listing__filter-heading">Rating</h4>
              <div class="product-listing__filter-options">
                {% for rating in (5..1) %}
                  <label class="product-listing__filter-option">
                    <input type="radio" name="rating" value="{{ rating }}" class="product-listing__radio">
                    <div class="product-listing__rating-filter">
                      <div class="product-listing__stars-small">
                        {% for i in (1..5) %}
                          <svg width="16" height="16" viewBox="0 0 24 24" fill="{% if i <= rating %}currentColor{% else %}none{% endif %}" stroke="currentColor" stroke-width="2">
                            <polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"/>
                          </svg>
                        {% endfor %}
                      </div>
                      <span class="product-listing__rating-text">& Up</span>
                    </div>
                  </label>
                {% endfor %}
              </div>
            </div>

            {%- comment -%} Availability {%- endcomment -%}
            <div class="product-listing__filter-group">
              <h4 class="product-listing__filter-heading">Availability</h4>
              <div class="product-listing__filter-options">
                <label class="product-listing__filter-option">
                  <input type="checkbox" class="product-listing__checkbox">
                  <span class="product-listing__filter-label">In Stock Only</span>
                </label>
                <label class="product-listing__filter-option">
                  <input type="checkbox" class="product-listing__checkbox">
                  <span class="product-listing__filter-label">Free Shipping</span>
                </label>
              </div>
            </div>

          </div>
        </aside>
      {% endif %}

      {%- comment -%} Main Content {%- endcomment -%}
      <div class="product-listing__main">
        
        {%- comment -%} Toolbar {%- endcomment -%}
        <div class="product-listing__toolbar">
          <div class="product-listing__toolbar-left">
            <span class="product-listing__result-count">
              {{ all_products.size }} products
            </span>
          </div>

          <div class="product-listing__toolbar-right">
            {%- comment -%} View Toggle {%- endcomment -%}
            <div class="product-listing__view-toggle">
              <button class="product-listing__view-btn product-listing__view-btn--active" data-view="grid">
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <rect x="3" y="3" width="7" height="7"></rect>
                  <rect x="14" y="3" width="7" height="7"></rect>
                  <rect x="14" y="14" width="7" height="7"></rect>
                  <rect x="3" y="14" width="7" height="7"></rect>
                </svg>
              </button>
              <button class="product-listing__view-btn" data-view="list">
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <line x1="8" y1="6" x2="21" y2="6"></line>
                  <line x1="8" y1="12" x2="21" y2="12"></line>
                  <line x1="8" y1="18" x2="21" y2="18"></line>
                  <line x1="3" y1="6" x2="3.01" y2="6"></line>
                  <line x1="3" y1="12" x2="3.01" y2="12"></line>
                  <line x1="3" y1="18" x2="3.01" y2="18"></line>
                </svg>
              </button>
            </div>

            {%- comment -%} Sort Dropdown {%- endcomment -%}
            <div class="product-listing__sort">
              <select class="product-listing__sort-select">
                <option value="relevance">Relevance</option>
                <option value="popular">Most Popular</option>
                <option value="rating">Highest Rated</option>
                <option value="price-low">Price: Low to High</option>
                <option value="price-high">Price: High to Low</option>
                <option value="newest">Newest</option>
              </select>
              <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="product-listing__sort-icon">
                <polyline points="6 9 12 15 18 9"></polyline>
              </svg>
            </div>
          </div>
        </div>

        {%- comment -%} Product Grid {%- endcomment -%}
        {% paginate collections.all.products by section.settings.products_per_page %}
          <div class="product-listing__products product-grid-uniform" data-product-grid>
            {% for product in collections.all.products %}
              {% render 'product-card-b2b',
                product: product,
                show_vendor: true,
                show_quick_add: true,
                show_rating: true,
                show_secondary_image: true,
                show_discount_percentage: true,
                show_bulk_pricing: true,
                bulk_threshold: 10,
                bulk_discount: 50,
                min_order_qty: 10,
                show_supplier: true,
                show_free_shipping: true
              %}
            {% else %}
              <div class="product-listing__empty">
                <p>No products available.</p>
              </div>
            {% endfor %}
          </div>

          {%- comment -%} Pagination {%- endcomment -%}
          {% if paginate.pages > 1 %}
            <div class="product-listing__pagination">
              {% if paginate.previous %}
                <a href="{{ paginate.previous.url }}" class="product-listing__pagination-btn">Previous</a>
              {% endif %}
              
              {% for part in paginate.parts %}
                {% if part.is_link %}
                  <a href="{{ part.url }}" class="product-listing__pagination-number">{{ part.title }}</a>
                {% else %}
                  <span class="product-listing__pagination-number product-listing__pagination-number--current">{{ part.title }}</span>
                {% endif %}
              {% endfor %}

              {% if paginate.next %}
                <a href="{{ paginate.next.url }}" class="product-listing__pagination-btn">Next</a>
              {% endif %}
            </div>
          {% endif %}
        {% endpaginate %}

      </div>
    </div>
  </div>
</div>

