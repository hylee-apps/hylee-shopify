{% comment %}
  Hero Search Section - Combined hero banner with search
  Customizable in theme editor
{% endcomment %}

{{ 'component-search-input.css' | asset_url | stylesheet_tag }}

<section class='hero-search' id='hero-search-{{ section.id }}'>
  <div class='hero-search__container'>
    {%- comment -%} Hero Content {%- endcomment -%}
    <div class='hero-search__content'>
      {% if section.settings.heading != blank %}
        <h1 class='hero-search__heading'>{{ section.settings.heading }}</h1>
      {% endif %}

      {% if section.settings.subheading != blank %}
        <p class='hero-search__subheading'>{{ section.settings.subheading }}</p>
      {% endif %}

      {%- comment -%} Search Form {%- endcomment -%}
      <div class='hero-search__form-wrapper'>
        {%
          render 'search-input',
          size: 'lg',
          color_scheme: 'inverted',
          width: 'full',
          show_button: false,
          placeholder: section.settings.search_placeholder | default: 'Search products...',
          value: search.terms,
          id: 'hero-search-form'
        %}
      </div>
    </div>
  </div>
</section>

<style>
  #hero-search-{{ section.id }} {
    position: relative;
    width: 100%;
    padding: 5rem 1.5rem;
    background: linear-gradient(135deg, {{ section.settings.gradient_start | default: '#14b8a6' }}, {{ section.settings.gradient_end | default: '#06b6d4' }});
    overflow: hidden;
    font-family: 'Assistant', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
  }

  #hero-search-{{ section.id }} .hero-search__container {
    max-width: 1280px;
    margin: 0 auto;
    position: relative;
    z-index: 1;
  }

  #hero-search-{{ section.id }} .hero-search__content {
    text-align: center;
    max-width: 56rem;
    margin: 0 auto;
  }

  /* Heading */
  #hero-search-{{ section.id }} .hero-search__heading {
    margin: 0 0 1rem 0;
    font-size: 3rem;
    font-weight: 600;
    color: {{ section.settings.heading_color | default: '#ffffff' }};
    line-height: 1.2;
    letter-spacing: -0.02em;
  }

  /* Subheading */
  #hero-search-{{ section.id }} .hero-search__subheading {
    margin: 0 0 2.5rem 0;
    font-size: 1.25rem;
    font-weight: 400;
    color: {{ section.settings.subheading_color | default: 'rgba(255, 255, 255, 0.95)' }};
    line-height: 1.6;
  }

  /* Search Form Wrapper */
  #hero-search-{{ section.id }} .hero-search__form-wrapper {
    width: 100%;
    max-width: 48rem;
    margin: 0 auto;
  }

  /* Custom button colors for this section */
  #hero-search-{{ section.id }} .search-input__button {
    --search-button-bg: {{ section.settings.button_background | default: '#10b981' }};
    --search-button-hover-bg: {{ section.settings.button_hover_background | default: '#059669' }};
    --search-button-color: {{ section.settings.button_text_color | default: '#ffffff' }};
    background: var(--search-button-bg);
    color: var(--search-button-color);
  }

  #hero-search-{{ section.id }} .search-input__button:hover {
    background: var(--search-button-hover-bg);
  }

  /* Tablet */
  @media (max-width: 1024px) {
    #hero-search-{{ section.id }} {
      padding: 4rem 1.5rem;
    }

    #hero-search-{{ section.id }} .hero-search__heading {
      font-size: 2.5rem;
    }

    #hero-search-{{ section.id }} .hero-search__subheading {
      font-size: 1.125rem;
    }
  }

  /* Mobile */
  @media (max-width: 767px) {
    #hero-search-{{ section.id }} {
      padding: 3rem 1rem;
    }

    #hero-search-{{ section.id }} .hero-search__heading {
      font-size: 2rem;
      margin-bottom: 0.75rem;
    }

    #hero-search-{{ section.id }} .hero-search__subheading {
      font-size: 1rem;
      margin-bottom: 2rem;
    }
  }
</style>

