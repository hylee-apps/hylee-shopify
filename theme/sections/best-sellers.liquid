{% comment %}
  Best Sellers Section
  Displays trending products with badges
{% endcomment %}

<section class="best-sellers" id="best-sellers-{{ section.id }}">
  <div class="best-sellers__container">
    <div class="best-sellers__header">
      <svg class="best-sellers__icon" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <polyline points="23 6 13.5 15.5 8.5 10.5 1 18"/>
        <polyline points="17 6 23 6 23 12"/>
      </svg>
      {% if section.settings.heading != blank %}
        <h3 class="best-sellers__heading">{{ section.settings.heading }}</h3>
      {% endif %}
    </div>

    <div class="best-sellers__grid">
      {% if section.settings.collection != blank %}
        {% assign collection = collections[section.settings.collection] %}
        {% assign products_to_show = section.settings.products_to_show | default: 4 %}
        
        {% for product in collection.products limit: products_to_show %}
          <a href="{{ product.url }}" class="best-sellers__item">
            <div class="best-sellers__image-wrapper">
              {% if product.featured_image %}
                {{ product.featured_image | image_url: width: 400 | image_tag: loading: 'lazy', alt: product.title, class: 'best-sellers__image' }}
              {% else %}
                <div class="best-sellers__image-placeholder">Product</div>
              {% endif %}
              
              <div class="best-sellers__badge">{{ section.settings.badge_text | default: 'Bestseller' }}</div>
            </div>
            
            <div class="best-sellers__content">
              <h4 class="best-sellers__title">{{ product.title }}</h4>
              <div class="best-sellers__price">{{ product.price | money }}</div>
            </div>
          </a>
        {% endfor %}
      {% else %}
        {% comment %} Fallback if no collection is selected {% endcomment %}
        {% for i in (1..4) %}
          <div class="best-sellers__item">
            <div class="best-sellers__image-wrapper">
              <div class="best-sellers__image-placeholder">Product</div>
              <div class="best-sellers__badge">{{ section.settings.badge_text | default: 'Bestseller' }}</div>
            </div>
            <div class="best-sellers__content">
              <h4 class="best-sellers__title">Lorem Ipsum Dolor Sit</h4>
              <div class="best-sellers__price">$89.99</div>
            </div>
          </div>
        {% endfor %}
      {% endif %}
    </div>
  </div>
</section>

<style>
#best-sellers-{{ section.id }} {
  padding: 4rem 1.5rem;
  background: {{ section.settings.background_color | default: 'rgba(248, 250, 252, 0.5)' }};
}

#best-sellers-{{ section.id }} .best-sellers__container {
  max-width: 1280px;
  margin: 0 auto;
}

#best-sellers-{{ section.id }} .best-sellers__header {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  margin-bottom: 2rem;
}

#best-sellers-{{ section.id }} .best-sellers__icon {
  color: #2563eb;
  flex-shrink: 0;
}

#best-sellers-{{ section.id }} .best-sellers__heading {
  margin: 0;
  font-size: 1.5rem;
  font-weight: 600;
  color: #0f172a;
  line-height: 1.3;
}

#best-sellers-{{ section.id }} .best-sellers__grid {
  display: grid;
  grid-template-columns: repeat(1, 1fr);
  gap: 1.5rem;
}

@media (min-width: 768px) {
  #best-sellers-{{ section.id }} .best-sellers__grid {
    grid-template-columns: repeat(2, 1fr);
  }
}

@media (min-width: 1024px) {
  #best-sellers-{{ section.id }} .best-sellers__grid {
    grid-template-columns: repeat(4, 1fr);
  }
}

#best-sellers-{{ section.id }} .best-sellers__item {
  background: #ffffff;
  border-radius: 0.75rem;
  overflow: hidden;
  border: 1px solid #e2e8f0;
  transition: all 0.2s;
  cursor: pointer;
  text-decoration: none;
  display: block;
}

#best-sellers-{{ section.id }} .best-sellers__item:hover {
  border-color: #bfdbfe;
  box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
  transform: translateY(-2px);
}

#best-sellers-{{ section.id }} .best-sellers__image-wrapper {
  position: relative;
  height: 12rem;
  overflow: hidden;
  background: #f1f5f9;
}

#best-sellers-{{ section.id }} .best-sellers__image,
#best-sellers-{{ section.id }} .best-sellers__image-placeholder {
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: transform 0.3s;
}

#best-sellers-{{ section.id }} .best-sellers__image-placeholder {
  display: flex;
  align-items: center;
  justify-content: center;
  color: #94a3b8;
  font-size: 1.25rem;
  background: linear-gradient(135deg, #cbd5e1 0%, #94a3b8 100%);
}

#best-sellers-{{ section.id }} .best-sellers__item:hover .best-sellers__image {
  transform: scale(1.1);
}

#best-sellers-{{ section.id }} .best-sellers__badge {
  position: absolute;
  top: 0.75rem;
  left: 0.75rem;
  padding: 0.375rem 0.625rem;
  background: {{ section.settings.badge_color | default: '#2699A6' }};
  color: white;
  font-size: 0.75rem;
  border-radius: 9999px;
  font-weight: 500;
}

#best-sellers-{{ section.id }} .best-sellers__content {
  padding: 1rem;
}

#best-sellers-{{ section.id }} .best-sellers__title {
  margin: 0 0 0.5rem 0;
  color: #0f172a;
  font-size: 0.875rem;
  font-weight: 500;
  line-height: 1.4;
  transition: color 0.2s;
}

#best-sellers-{{ section.id }} .best-sellers__item:hover .best-sellers__title {
  color: #2563eb;
}

#best-sellers-{{ section.id }} .best-sellers__price {
  color: #0f172a;
  font-size: 1rem;
  font-weight: 600;
}

@media (max-width: 767px) {
  #best-sellers-{{ section.id }} {
    padding: 3rem 1rem;
  }
}
</style>

{% schema %}
{
  "name": "Best Sellers",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Best Sellers"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection"
    },
    {
      "type": "range",
      "id": "products_to_show",
      "min": 2,
      "max": 12,
      "step": 1,
      "label": "Products to Show",
      "default": 4
    },
    {
      "type": "text",
      "id": "badge_text",
      "label": "Badge Text",
      "default": "Bestseller"
    },
    {
      "type": "color",
      "id": "badge_color",
      "label": "Badge Color",
      "default": "#2699A6"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "rgba(248, 250, 252, 0.5)"
    }
  ],
  "presets": [
    {
      "name": "Best Sellers"
    }
  ]
}
{% endschema %}
