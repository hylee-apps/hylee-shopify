{% comment %}
  Collection Hero Section
  Displays collection title, description, and optional image
{% endcomment %}

{% liquid
  assign has_image = false
  if image
    assign has_image = true
  endif
%}

<div class="collection-hero{% if has_image %} collection-hero--with-image{% endif %}">
  {% if has_image %}
    <div class="collection-hero__image">
      <img
        src="{{ image | image_url: width: 1920 }}"
        alt="{{ title }}"
        loading="eager"
        width="1920"
        height="400"
      >
    </div>
  {% endif %}

  <div class="collection-hero__content">
    <div class="collection-hero__text">
      <h1 class="collection-hero__title">{{ title }}</h1>
      {% if description and description != blank %}
        <div class="collection-hero__description">{{ description }}</div>
      {% endif %}
    </div>
  </div>
</div>

<style>
.collection-hero {
  position: relative;
  width: 100%;
  background-color: rgb(248, 250, 252);
  padding: 3rem 1rem;
  margin-bottom: 2rem;
}

.collection-hero--with-image {
  padding: 0;
  background: none;
}

.collection-hero__image {
  position: relative;
  width: 100%;
  height: 400px;
  overflow: hidden;
}

.collection-hero__image img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.collection-hero__content {
  max-width: 1440px;
  margin: 0 auto;
  padding: 0 1rem;
}

.collection-hero--with-image .collection-hero__content {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 100%;
  z-index: 10;
}

.collection-hero__text {
  max-width: 800px;
  margin: 0 auto;
  text-align: center;
}

.collection-hero--with-image .collection-hero__text {
  background-color: rgba(255, 255, 255, 0.95);
  padding: 2rem;
  border-radius: 0.75rem;
  backdrop-filter: blur(10px);
}

.collection-hero__title {
  margin: 0 0 1rem 0;
  font-size: 2.5rem;
  font-weight: 700;
  color: rgb(15, 23, 42);
  line-height: 1.2;
}

@media (max-width: 768px) {
  .collection-hero__title {
    font-size: 2rem;
  }
}

.collection-hero__description {
  font-size: 1.125rem;
  line-height: 1.75;
  color: rgb(51, 65, 85);
}
</style>
