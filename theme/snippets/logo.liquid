{% comment %}
  Logo Snippet
  Renders the site logo with responsive desktop/mobile variants

  Usage:
    {% render 'logo', class_prefix: 'header', show_text: true %}
    {% render 'logo', class_prefix: 'footer', show_text: true %}

  Parameters:
    - class_prefix: (required) CSS class prefix (e.g., 'header', 'footer', 'order-confirmation')
    - show_text: (optional) Whether to show logo text, default: true
    - logo_text: (optional) Override text, default: shop.name
{% endcomment %}

{%- liquid
  assign show_text = show_text | default: true
  assign logo_text_display = logo_text | default: shop.name
-%}

<a href='{{ routes.root_url }}' class='{{ class_prefix }}__logo'>
  {%- comment -%} Desktop Logo (hidden on mobile) {%- endcomment -%}
  <img
    src='{{ 'logo-128.png' | asset_url }}'
    alt='{{ shop.name }}'
    class='{{ class_prefix }}__logo-image {{ class_prefix }}__logo-image--desktop'
    width='128'
    height='auto'
    loading='eager'
  >
  {%- comment -%} Mobile Logo (hidden on desktop) {%- endcomment -%}
  <img
    src='{{ 'logo-64.png' | asset_url }}'
    alt='{{ shop.name }}'
    class='{{ class_prefix }}__logo-image {{ class_prefix }}__logo-image--mobile'
    width='64'
    height='auto'
    loading='eager'
  >
  {%- if show_text -%}
    <span class='{{ class_prefix }}__logo-text'>{{ logo_text_display }}</span>
  {%- endif -%}
</a>
