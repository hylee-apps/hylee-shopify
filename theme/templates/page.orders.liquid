{% comment %}
  Orders Page Template
  Use this template on a page with handle "orders" to create /pages/orders
  For logged-in customers, shows their order history
  For guests, redirects to login
{% endcomment %}

{% layout 'theme' %}

{% if customer %}
  {% section 'customer-orders' %}
{% else %}
  <script>
    window.location.href = '{{ routes.account_login_url }}?return_url={{ routes.account_url | url_encode }}';
  </script>
  <div class="page-width" style="padding: var(--space-8) 0; text-align: center;">
    <p>Please <a href="{{ routes.account_login_url }}">log in</a> to view your orders.</p>
  </div>
{% endif %}
