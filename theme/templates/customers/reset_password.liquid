{% comment %}
  Customer Password Reset Page Template
{% endcomment %}

<div class="customer-reset">
  <div class="customer-reset__container">
    <div class="customer-reset__form-wrapper">
      <h1 class="customer-reset__title">Reset Password</h1>
      <p class="customer-reset__subtitle">Enter your email to receive password reset instructions.</p>

      {% form 'recover_customer_password' %}
        {{ form.errors | default_errors }}

        {% if form.posted_successfully? %}
          <div class="customer-reset__success">
            We've sent you an email with a link to reset your password.
          </div>
        {% endif %}

        <div class="customer-reset__field">
          <label for="RecoverEmail" class="customer-reset__label">Email</label>
          <input
            type="email"
            name="email"
            id="RecoverEmail"
            autocomplete="email"
            class="customer-reset__input"
            placeholder="your@email.com"
          >
        </div>

        <button type="submit" class="customer-reset__submit">
          Send Reset Instructions
        </button>
      {% endform %}

      <div class="customer-reset__back">
        <a href="{{ routes.account_login_url }}" class="customer-reset__back-link">
          ‚Üê Back to Sign In
        </a>
      </div>
    </div>
  </div>
</div>

<style>
  .customer-reset {
    min-height: 80vh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 2rem 1.5rem;
    background: linear-gradient(to bottom, #f8fafc, white);
  }

  .customer-reset__container {
    width: 100%;
    max-width: 28rem;
  }

  .customer-reset__form-wrapper {
    background: white;
    border: 1px solid #e2e8f0;
    border-radius: 0.75rem;
    padding: 2rem;
    box-shadow: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
  }

  .customer-reset__title {
    font-size: 1.875rem;
    color: #0f172a;
    margin-bottom: 0.5rem;
    font-weight: 600;
  }

  .customer-reset__subtitle {
    color: #475569;
    margin-bottom: 2rem;
  }

  .customer-reset__success {
    background: #dcfce7;
    border: 1px solid #bbf7d0;
    border-radius: 0.5rem;
    padding: 1rem;
    margin-bottom: 1.5rem;
    color: #166534;
    font-size: 0.875rem;
  }

  .customer-reset__field {
    margin-bottom: 1.5rem;
  }

  .customer-reset__label {
    display: block;
    font-size: 0.875rem;
    color: #334155;
    margin-bottom: 0.375rem;
    font-weight: 500;
  }

  .customer-reset__input {
    width: 100%;
    padding: 0.625rem 0.875rem;
    border: 1px solid #cbd5e1;
    border-radius: 0.375rem;
    font-size: 0.875rem;
    transition: all 0.2s;
  }

  .customer-reset__input:focus {
    outline: none;
    border-color: #2AC864;
    box-shadow: 0 0 0 3px rgba(42, 200, 100, 0.1);
  }

  .customer-reset__submit {
    width: 100%;
    padding: 0.75rem 1.5rem;
    background: #2AC864;
    color: white;
    border: none;
    border-radius: 0.5rem;
    font-weight: 500;
    cursor: pointer;
    transition: background 0.2s;
    margin-bottom: 1.5rem;
  }

  .customer-reset__submit:hover {
    background: #24b056;
  }

  .customer-reset__back {
    padding-top: 1.5rem;
    border-top: 1px solid #e2e8f0;
    text-align: center;
  }

  .customer-reset__back-link {
    color: #2AC864;
    text-decoration: none;
    font-size: 0.875rem;
  }

  .customer-reset__back-link:hover {
    text-decoration: underline;
  }

  .errors {
    background: #fee2e2;
    border: 1px solid #fecaca;
    border-radius: 0.5rem;
    padding: 1rem;
    margin-bottom: 1.5rem;
  }

  .errors ul {
    margin: 0;
    padding-left: 1.25rem;
    color: #991b1b;
  }

  .errors li {
    font-size: 0.875rem;
    margin-bottom: 0.25rem;
  }
</style>
